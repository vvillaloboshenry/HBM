<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controles.MenuActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="291dp">

                <ImageView
                    android:id="@+id/menu_imgSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.22"
                    android:background="@drawable/portada1"
                    android:nestedScrollingEnabled="false" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/menu_imgSlider"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="-52dp"
                    android:layout_weight="0.42"
                    android:background="#5a000000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="#00ffffff"
                        android:text="Hotel"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/menu_btn1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/btnDerecha"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btnlleno"
                        android:textColor="#ffffff"></Button>

                    <Button
                        android:id="@+id/menu_btn2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/btnDerecha"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btnvacio"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/menu_btn3"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/btnDerecha"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btnvacio"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/menu_btn4"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/btnDerecha"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btnvacio"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:background="#61210B">

            <Button
                android:id="@+id/menu_btnInfo"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/gridLayout"
                android:layout_column="0"
                android:layout_marginTop="3dp"
                android:layout_row="0"
                android:background="#ffffff"
                android:drawableTop="@drawable/imgaboutus"
                android:text="Quienes Somos"
                android:textColor="#61210B"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_btnCuartos"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2.7dp"
                android:layout_row="0"
                android:background="#ffffff"
                android:drawableTop="@drawable/imgroom"
                android:paddingTop="4dp"
                android:text="Cuartos"
                android:textColor="#61210B"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_btnMisReservas"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginTop="3dp"
                android:layout_row="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/imglist"
                android:paddingTop="4dp"
                android:text="Mis reservaciones"
                android:textColor="#61210B"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_btnServicios"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_row="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/imgtrabajando"
                android:paddingTop="4dp"
                android:text="En proceso"
                android:textColor="#61210B"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_btnGaleria"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginTop="2.8dp"
                android:layout_row="2"
                android:background="#ffffff"
                android:drawableTop="@drawable/imggaleria"
                android:text="Galeria"
                android:textColor="#61210B"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_btnUbicacion"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2.5dp"
                android:layout_row="2"
                android:background="#ffffff"
                android:drawableTop="@drawable/imgmap"
                android:paddingTop="4dp"
                android:text="Ubicacion"
                android:textColor="#61210B"
                android:textStyle="bold" />

        </GridLayout>
    </LinearLayout>

</RelativeLayout>
