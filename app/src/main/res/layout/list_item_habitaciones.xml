<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="3dp"
        android:background="#ffffff"
        android:layout_marginTop="0.8dp">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/item_list_habitaciones_imageView"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/iconomenujuego" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/item_list_habitaciones_tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#61210B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:id="@+id/item_list_habitaciones_tvDescripcion"
                    android:layout_weight="0.83"
                    android:textColor="#61210B" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="ver detalles"
                    android:id="@+id/item_list_habitaciones_btnDetalles"
                    android:textColor="#f2ffffff"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boton_rectangular"
                    android:layout_marginRight="3dp"
                    android:backgroundTint="#3c7728" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
